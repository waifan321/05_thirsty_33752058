<!doctype html>
<html>
  <head>
    <title>Search | <%= shopName %></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>

    <%- include('partials/header') %>

    <section class="search-section">
      <h1 class="search-title">Find Your Drink ğŸ¹</h1>
      <p class="search-description">Search our menu by drink name or category</p>

      <form class="search-form" action="/search_result" method="GET">
        <div class="form-group">
          <label>Name:</label>
          <input type="text" name="search_text" placeholder="e.g. Mojito">
        </div>

        <div class="form-group">
          <label>Category:</label>
          <input type="text" name="category" placeholder="e.g. Cocktails">
        </div>

        <input class="submit-button" type="submit" value="Search">
      </form>
    </section>

  </body>
</html>
